<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= post.image %>
  </p>

  <p>
    <strong>User:</strong>
    <%= User.find_by(id: post.user_id).name %>
  </p>

  <%= post.created_at %>
  <% unless post.created_at == post.updated_at %>
    <%= "Edited: #{post.updated_at}" %>
  <% end %>

  <br />
</div>
