<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= image_tag(post.featured_image, width: 400) %>
  </p>

  <p>
    <strong>User:</strong>
    <%= @username %>
  </p>

  <%= post.created_at %>

  <% unless post.created_at.to_i == post.updated_at.to_i %>

    <%= "Edited: #{post.updated_at}" %>
  <% end %>

  <br />
</div>
