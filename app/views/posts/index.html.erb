<p style="color: green"><%= notice %></p>



<div class="img_container container">
  <% @posts.each do |post| %>
    <a href="<%= "/posts/#{post.id}" %>" data-turbo-frame="main_image">
      <div class="img_back col col-md-auto" data-bs-toggle="modal" data-bs-target="#exampleModal">
          <%= image_tag(post.featured_image) %>   
      </div>
    </a>
  <% end %>
</div>
 


<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel"></h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

          <%= turbo_frame_tag "main_image" do %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>